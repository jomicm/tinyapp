<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (user) {%>
      <form class="form-inline" action="/logout" method="POST" style="margin: -15px 0 -20px">
        <div class="form-group mb-2">
          <span class="px-2">Logged In As: <%= user.email %></span>
          <button type="submit" class="btn btn-outline-dark">Logout</button>
        </div>
      </form>
    <% } else { %>
      <a class="nav-item nav-link" href="/register" style="color: white;">Sign Up!</a>
      <a class="nav-item nav-link" href="/login" style="color: white;">Login!</a>
    <% } %>
  </nav>
  <% if(locals.message) { %>
    <div class="alert alert-<%= locals.message.type %> alert-dismissible fade show m-3" role="alert">
      <h5><%= locals.message.msg %></h5>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% } %>
</header>